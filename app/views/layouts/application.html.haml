!!!
%html{ lang: :en }
  %head
    %title WheelerBoard
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{ data: { toggle: :collapse, target: 'nav-collapse' } }
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{ href: root_path } WheelerBoard
          - if employee_signed_in?
            .btn-group.pull-right
              %a.btn.dropdown-toggle{ href: '#', data: { toggle: :dropdown } }
                %i.icon-user
                = current_employee
                %span.caret
              %ul.dropdown-menu
                %li= link_to "Profile", edit_employee_profile_path
                %li.divider
                %li= link_to "Logout", destroy_employee_session_path, method: :delete
          - else
            = link_to "<i class='icon-user'></i> Login".html_safe, employee_omniauth_authorize_path(:google_oauth2), class: 'btn pull-right'
          .nav-collapse
            %ul.nav
              - if current_employee and current_employee.profile
                %li{ class: ('active' if @active_tab == 'wheeler') }= link_to "New Wheeler", new_wheeler_path
    .container
      .row
        .span8
          - if flash[:alert]
            .alert.alert-error
              %a.close{ href: '#', data: { dismiss: 'alert' } } &times;
              %p= flash[:alert]
          - if flash[:notice]
            .alert.alert-success
              %a.close{ href: '#', data: { dismiss: 'alert' } } &times;
              %p= flash[:notice]
          = yield
        .span4
          - if content_for? :wheeler
            = yield :wheeler
          - else
            = image_tag 'wheeler.jpg', width: '100%'
      %hr
      %footer
